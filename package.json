{
    "name": "civilization-js",
    "version": "0.5.3",
    "description": "civilization on javascript",
    "author": "boeny",
    "license": "MIT",
    "scripts": {
        "start": "webpack serve",
        "watch": "webpack --watch",
        "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}' --ignore-path .eslintignore",
        "lint:fix": "npm run lint -- --fix",
        "lint:errors": "npm run lint -- --quiet",
        "lint:errors:fix": "npm run lint:errors -- --fix",
        "format": "prettier -c src",
        "format:fix": "prettier -w src",
        "typecheck": "tsc --noEmit",
        "build:dev": "webpack --mode=development",
        "build": "webpack --mode=production --node-env=production",
        "prepare": "husky && chmod ug+x .husky/*",
        "lint-staged": "lint-staged --concurrent false"
    },
    "dependencies": {
        "react": "19.1.1",
        "react-dom": "19.1.1"
    },
    "devDependencies": {
        "@types/react": "19.1.13",
        "@types/react-dom": "19.1.9",
        "@typescript-eslint/eslint-plugin": "8.44.0",
        "@typescript-eslint/parser": "8.44.0",
        "css-loader": "7.1.2",
        "eslint": "9.36.0",
        "eslint-config-prettier": "10.1.8",
        "eslint-import-resolver-typescript": "4.4.4",
        "eslint-plugin-import": "2.32.0",
        "eslint-plugin-jest": "29.0.1",
        "eslint-plugin-jsx-a11y": "6.10.2",
        "eslint-plugin-prettier": "5.5.4",
        "eslint-plugin-react": "7.37.5",
        "eslint-plugin-react-hooks": "5.2.0",
        "html-webpack-plugin": "5.6.4",
        "husky": "9.1.7",
        "lint-staged": "16.2.0",
        "prettier": "3.6.2",
        "style-loader": "4.0.0",
        "ts-loader": "9.5.4",
        "ts-node": "10.9.2",
        "typescript": "5.9.2",
        "webpack": "5.101.3",
        "webpack-cli": "6.0.1",
        "webpack-dev-server": "5.2.2"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "npm run lint:fix"
        ],
        "*.{js,jsx,ts,tsx,json}": [
            "npm run format:fix"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
