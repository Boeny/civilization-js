{
    "name": "civilization-js",
    "version": "0.3.0",
    "description": "civilization on javascript",
    "author": "boeny",
    "license": "MIT",
    "scripts": {
        "start": "webpack serve",
        "watch": "webpack --watch",
        "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}' --ignore-path .eslintignore",
        "lint:fix": "npm run lint -- --fix",
        "lint:errors": "npm run lint -- --quiet",
        "lint:errors:fix": "npm run lint:errors -- --fix",
        "format": "prettier -c src",
        "format:fix": "prettier -w src",
        "typecheck": "tsc --noEmit",
        "prebuild": "rimraf dist",
        "build:dev": "webpack --mode=development",
        "build": "webpack --mode=production --node-env=production",
        "prepare": "husky && chmod ug+x .husky/*",
        "lint-staged": "lint-staged --concurrent false"
    },
    "dependencies": {
        "react": "18.3.1",
        "react-dom": "18.3.1"
    },
    "devDependencies": {
        "@types/react": "18.3.12",
        "@types/react-dom": "18.3.1",
        "@typescript-eslint/eslint-plugin": "8.12.2",
        "@typescript-eslint/parser": "8.12.2",
        "css-loader": "7.1.2",
        "eslint": "8.57.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-import-resolver-typescript": "3.6.3",
        "eslint-plugin-import": "2.31.0",
        "eslint-plugin-jest": "28.8.3",
        "eslint-plugin-jsx-a11y": "6.10.2",
        "eslint-plugin-prettier": "5.2.1",
        "eslint-plugin-react": "7.37.2",
        "eslint-plugin-react-hooks": "5.0.0",
        "html-webpack-plugin": "5.6.3",
        "husky": "9.1.6",
        "lint-staged": "15.2.10",
        "prettier": "3.3.3",
        "style-loader": "4.0.0",
        "ts-loader": "9.5.1",
        "ts-node": "10.9.2",
        "typescript": "5.6.3",
        "webpack": "5.95.0",
        "webpack-cli": "5.1.4",
        "webpack-dev-server": "5.1.0"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "npm run lint:fix"
        ],
        "*.{js,jsx,ts,tsx,json}": [
            "npm run format:fix"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
